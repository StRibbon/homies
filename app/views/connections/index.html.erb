<h1>Connections Index</h1>

<%= link_to "Add HOMIES", edit_connections_path(sphere_id: params[:sphere_id]) %> 

<ul>
<% @connections.each do |connection|%>
<li> 
  <% user = User.find_by_id(connection.user_id) %>
  <img src=<%= user.img_url %> width="50">
  <%= user.username %>
  <%= link_to "Delete", delete_connection_path(@id, connection), method: :delete, data: { confirm: 'Are you sure?' } %> 
</li>

<% end %>
</ul>
