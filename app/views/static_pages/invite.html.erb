<div class="fake_body">
<div class="container">

<%= form_tag login_path, :class => 'form-signin' do %>
	
	<img class="login_logo" src="<%= asset_path( 'homies_logo.png' ) %>" alt="Homies Logo" width="210">

  <%= label_tag "inputEmail", nil, class: 'sr-only' %>
