<%= form_tag login_path do %>
<div>
  <%= label_tag "Email" %>
  <%= text_field_tag :email%>
</div>
<div>
  <%= label_tag "Password" %>
  <%= password_field_tag :password%>
</div>
<div>
  <%= submit_tag "Log In"%>
</div>
<% end %>
<p>
  <%= link_to "Don't have an account? Sign up here", new_user_path%>
</p>

