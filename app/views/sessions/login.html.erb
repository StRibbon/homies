<div class="fake_body">
<div class="container">

<%= form_tag login_path, :class => 'form-signin' do %>
	
	<img class="login_logo" src="<%= asset_path( 'homies_logo.png' ) %>" alt="Homies Logo" width="210">

  <%= label_tag "inputEmail", nil, class: 'sr-only' %>
  <%= text_field_tag :email, nil, class: 'form-control', placeholder: "Email address"%>


  <%= label_tag "inputPassword", nil, class: 'sr-only' %>
  <%= password_field_tag :password, nil, class: 'form-control', placeholder:'Password' %>


  <%= submit_tag "Log In", class: 'btn btn-lg btn-primary btn-block'%>

<% end %>

<div class="forgot_signup">
	 <%= link_to "Forgot your password?", new_reset_path, class: 'forgot_password'%>
	 <%= link_to "Sign up", new_user_path, class: 'signup'%>
</div>

</div>
</div>


