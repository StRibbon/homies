<% if @user.errors.any? %>
  <% @user.errors.full_messages.each do |error| %>
    <p class="text-danger">
      <%= error%>
    </p>
  <% end %>
<% end %>

<%= form_for @user do |f|%>
<div>
  <%= f.label :email%>
  <%= f.email_field :email%>
</div>
<div>
  <%= f.label :password%>
  <%= f.password_field :password%>
</div>
<div>
  <%= f.submit %>
</div>
<% end %>